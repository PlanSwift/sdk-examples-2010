  Dialogs, ComCtrls, StdCtrls,Planswift9_TLB,Unit2,Word_TLB,Excel_TLB,Outlook_TLB;

type
  TForm1 = class(TForm)
    MSWord: TButton;
    Button2: TButton;
    Button3: TButton;
    Button4: TButton;
    Button5: TButton;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Label5: TLabel;
    ProgressBar1: TProgressBar;
